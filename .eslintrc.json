{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": [
    "@typescript-eslint", 
    "prettier",
    "mocha",
    "security"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:node/recommended",
    "plugin:security/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "printWidth": 2000
        //"arrowParens": "always",
        //"tabWidth": 2
      }
    ],
    "strict": ["error", "global"],
    //"max-len": ["error", {"code": 100, "ignoreUrls": true}],
    "semi": "error",
    "no-unused-vars": "warn",
    "no-var": "warn",
    "no-new-object": "error",
    //"no-unexpected-multiline": "off",
    //"node/no-unsupported-features/es-syntax": "off",
    "node/no-deprecated-api": "off",
    "object-shorthand": "off",
    "quote-props": ["error", "as-needed"],
    "no-prototype-builtins": "off",
    "no-console": "off",
    "prefer-destructuring": "warn",
    "no-eval": "warn",
    //"func-names": "off",
    "wrap-iife": "error",
    "no-loop-func": "off",
    "nonblock-statement-body-position": ["off", "below"],
    "default-param-last": "error",
    "space-before-function-paren": "off", // was "warn"
    "space-before-blocks": "warn",
    // "function-paren-newline": ["error", { "minItems": 3 }], // REVIEW - not working
    // "function-paren-newline": ["error", "multiline"],
    // "function-paren-newline": ["error", "never"],
    "function-paren-newline": ["error", "consistent"],
    "function-call-argument-newline": ["error", "consistent"], // always
    "no-async-promise-executor": "off", // inserted for refactor (Promise(async)
    "security/detect-object-injection": "off",
    "no-param-reassign": "warn",
    "prefer-arrow-callback": "warn", 
    "arrow-spacing": "warn",
    "arrow-parens": "warn",
    "no-dupe-class-members": "error",
    "@typescript-eslint/no-var-requires": 0, // inserted for refactor
    "import/no-mutable-exports": "off",
    "import/prefer-default-export": "off", 
    "import/first":  "off",
    "import/extensions": "off",
    "object-curly-newline": "off",
    "dot-notation": "warn",
    "class-methods-use-this": "off",
    "no-process-exit": "off",
    "indent": ["warn", 2],
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ], // error
    "no-undef": "warn",
    "no-const-assign": "error",
    "no-plusplus": ["warn", { "allowForLoopAfterthoughts": true }],
    "eqeqeq": "warn",
    "spaced-comment": "warn",
    "space-infix-ops": "error",
    "eol-last": "warn",
    // "newline-per-chained-call": "warn",
    "newline-per-chained-call": ["warn", { "ignoreChainWithDepth": 3 }],
    "no-whitespace-before-property": "warn",
    "space-in-parens": "error",
    "array-bracket-spacing": "error",
    "object-curly-spacing": "off",
    "comma-spacing": "warn",
    "computed-property-spacing": "warn",
    "func-call-spacing": "warn",
    "key-spacing": "warn",
    "no-multiple-empty-lines": "warn",
    "no-underscore-dangle": "off", //warn
    "no-throw-literal": "error"
  }
}
